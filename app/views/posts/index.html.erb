<!-- Blog Section -->
<%if @posts.any? %>
<section id="blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
              <h1>The BLOG<small id='story'>THE STORY</small></h1>
              <hr class="star-light">
              <% @posts.each do |post| %>
              <h2>  <%= post.title %></h2>
                <small><%= (post.created_at).strftime("Posted on %A, %d %b %Y %l:%M %p") %>
              <p class='text-left'><%= raw((post.body))%></p>
              <% end %>
            </div>
        </div>
      </div>
</section>
<% end %>


